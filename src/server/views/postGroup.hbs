<main class="postGroup page container">
	<div class="postGroup_content">
		{{{ model.content }}}
	</div>
	{{#each model.posts as |post key|}}
		<a class="postCard" href="/posts/{{ ../model.postGroup }}/{{ post.postId }}">
			<h2 class="postCard_title">{{ post.title }}</h2>
			<p class="postCard_description">{{ post.description }}</p>
			<span class="postCard_cta">Read post</span>
		</a>
	{{/each}}
</main>
