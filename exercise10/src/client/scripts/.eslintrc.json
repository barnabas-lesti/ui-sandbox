{
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "rules": {
    "indent": [
      2,
      "tab"
    ],
    "quotes": [
      2,
      "single"
    ],
    "comma-dangle": [
      1,
      "always-multiline"
    ],
    "semi": 2,
    "no-console": 2,
    "no-undef": 2
  }
}
